<article>
    <div class="eng-article-resource">
        <div class="eng-article-resource-text">{{resource_type.title}}</div>
    </div>
    <div class="article-content">
        <h2>{{title}}</h2>
        <p>{{breaklines resource}}</p>
    </div>
    <div class="article-image">
        <a href="">
            <img alt="{{title}}" src="{{resource_image}}"></img>
        </a>
    </div>
    <div class="{{#unless username}}eng-rating{{/unless}}">
        {{#if averageRating}}
            {{#if username}}
                <a class="orange-btn download-link eng-stars" href="/review/{{id}}" ><img src="/images/stars-{{averageRating}}.png" alt="{{averageRating}} stars"></a>
            {{else}}
                <img class="eng-stars" src="/images/stars-{{averageRating}}.png" alt="{{averageRating}} stars">
            {{/if}}
        {{/if}}
    </div>  
    {{#if username}}
        <a class="orange-btn download-link" href="/review/{{id}}" >Review ></a>       
    {{/if}}
    <a class="orange-btn download-link" href="/detail/{{id}}" >Read More ></a>        
</article>
